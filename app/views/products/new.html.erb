<%= simple_form_for(@product) do |f| %>
  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" } %>
    <%= f.input :category,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "category" } %>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "description" } %>
    <%= f.input :price,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "price" } %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions d-flex justify-content-between">
    <%= f.button :submit, "Create", class: 'btn btn-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  </div>
<% end %>
