<div>
  <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>
  <h1><%= @product.name %></h1>
  <p><%= @product.category %></p>
  <p><%= @product.description %></p>
  <p><%= @product.price %></p>
  <hr>
  <p>Owner: <%= @product.user.first_name %> <%= @product.user.last_name %></p>
  <div class="d-flex">
    <% if @product.user != current_user %>
      <%= link_to 'Buy', new_product_purchase_path(@product), class:'btn btn-primary me-2' %>
    <% else %>
      <%= link_to 'Edit', edit_product_path(@product), class:'btn btn-secondary me-2' %>
      <%= button_to 'Delete', @product, method: :delete, data: { confirm: "Are you sure?" }, class:'btn btn-secondary me-2' %>
    <% end %>
  </div>
</div>
