<div>
  <h1><%= @product.name %></h1>
  <p><%= @product.category %></p>
  <p><%= @product.description %></p>
  <p><%= @product.price %></p>
  <hr>
  <p>Owner: <%= current_user.first_name %> <%= current_user.last_name %></p>
  <div class="d-flex">
    <%= link_to 'Edit', edit_product_path(@product), class:'btn btn-secondary me-2' %>
    <%= button_to 'Delete', @product, method: :delete, data: { confirm: "Are you sure?" }, class:'btn btn-secondary' %>
  </div>
</div>
