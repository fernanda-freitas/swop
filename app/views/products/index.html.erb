<div class="d-flex justify-content-between">
  <h1>All products</h1>
  <%= link_to 'Create product', new_product_path %>
</div>

<% @products.each do |product| %>
  <div>
    <p><%= product.name %></p>
    <p><%= product.category %></p>
    <p><%= product.description %></p>
    <p><%= product.price %></p>
  </div>
  <div>
    <%= link_to 'More details', product_path(product) %>
  </div>
  <hr>
<% end %>
