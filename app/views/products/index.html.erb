<div class="d-flex justify-content-between mb-5">
  <h1>All products</h1>
  <div>
    <%= link_to 'Create product', new_product_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3">
      <div class="card px-0" style="width: 18rem; height: 28rem;">
        <%= cl_image_tag product.photo.key, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
          <div class="d-flex align-items-center">
            <%= link_to 'More details', product_path(product), class:'card-link' %>
            <% if policy(product).update? %>
              <%= link_to 'Edit', edit_product_path(product), class:'card-link' %>
            <% end %>
            <% if policy(product).destroy? %>
              <%= button_to(
                "Delete",
                product,
                method: :delete,
                class: 'btn btn-link'
              ) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
