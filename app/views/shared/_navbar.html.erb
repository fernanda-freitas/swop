<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "swop-logotype-dark.svg" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto align-items-center">
        <% if user_signed_in? %>
          <li class="align-items-center">
            <%= link_to "Dashboard", dashboard_path(current_user), class: "dropdown-item" %>
          </li>
          <li>
            <%= button_to(
              "Log Out",
              destroy_user_session_path,
              method: :delete,
              class: 'dropdown-item'
            ) %>
          </li>
          <li>
            <%= link_to 'Start selling', new_product_path, class: 'btn btn-primary-custom ms-2' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
            <%= link_to 'Start selling', new_product_path, class: 'btn btn-primary-custom' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
